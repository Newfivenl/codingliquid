{% comment %}
{% endcomment %}

{% liquid 

    assign block_id = block.id 
    assign color_scheme = block.settings.usp_product_color_scheme 
    assign tw_usp_text = block.settings.tw_usp_text 
    assign tw_usp_label_font_size = block.settings.tw_usp_label_font_size 
    assign tw_usp_icon_svg = block.settings.tw_usp_icon_svg 
    assign tw_usp_icon_svg = block.settings.tw_usp_icon_svg_2 
    assign tw_usp_page_content = block.settings.tw_usp_page_content
    
    assign count_usp = count_usp, 
    assign cursor_auto = cursor_auto
    assign padding_top = block.settings.padding_top
    assign padding_bottom = block.settings.padding_bottom

    if tw_usp_page_content != blank 
        capture cursor_auto
            echo 'cursor-auto'
        endcapture 
    endif
%}

<div class="usp-block color-{{ color_scheme }} gradient !nf-m-0" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_top }}px;">
    {% assign count_usp = count_usp | plus: 1 %}

    <div id="usp_product__item-{{count_usp}}" class="nf-flex nf-relative nf-items-center usp_product__item color-{{ color_scheme }} gradient" block-id="{{ block.id }}" count_usp="{{count_usp}}">
        {%- if usp_product_icon_svg -%}
            <span class="color-{{ color_scheme }} gradient first:nf-contents [&>svg]:nf-max-w-[20px] [&>svg]:nf-h-[20px] [&>svg]:nf-w-full [&>svg]:nf-fill-[#80807E]">{{ usp_product_icon_svg }}</span>
        {%- endif -%}
        <span id="showDialog-{{ block.id }}" class="nf-flex usp-font-size color-{{ color_scheme }} gradient {{- cursor_auto -}}">
            <span class="nf-ml-[10px]" style="font-size: {{usp_product_font_size}}px;">{{ usp_product_text }}</span>
            {%- if usp_product__item_svg_icon_2 -%}
                <span class="nf-ml-[10px]">{{ usp_product__item_svg_icon_2 }}</span>   
            {%- endif -%}
        </span>
    </div> 
    
</div>