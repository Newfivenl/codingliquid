{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .full-width {
        padding: 0 1.5rem;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    @media screen and (min-width: 990px) {
        .full-width {
            padding-left: 5rem;
            padding-right: 5rem;
        }
    }
{%- endstyle -%}

<section class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="{{ section.settings.hero_width }}">
    <div class="tw-grid tw-grid-cols-1 tw-gap-x-20 tw-gap-y-12 md:tw-gap-y-16 lg:tw-grid-cols-2 lg:tw-items-center">
      <div>
        {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'heading' -%}
                {%- style -%}
                    .heading-{{ block.id }}-margin {
                        margin-top: {{ block.settings.margin_top | times: 0.75 | round: 0 }}px;
                        margin-bottom: {{ block.settings.margin_bottom | times: 0.75 | round: 0 }}px;
                    }
                {%- endstyle -%}
                {%- case block.settings.heading_tag -%} 
                {%- when 'h1' -%}
                    <h1 class="h1 heading-{{ block.id }}-margin">{{ block.settings.heading_text }}</h1>
                {%- when 'h2' -%}
                    <h2 class="h2 heading-{{ block.id }}-margin">{{ block.settings.heading_text }}</h2>
                {%- when 'h3' -%}
                    <h3 class="h3 heading-{{ block.id }}-margin">{{ block.settings.heading_text }}</h3>
                {%- endcase -%}
            {%- when 'paragraph' -%}
                {%- style -%}
                    .paragraph-{{ block.id }}-margin {
                        margin-top: {{ block.settings.margin_top | times: 0.75 | round: 0 }}px;
                        margin-bottom: {{ block.settings.margin_bottom | times: 0.75 | round: 0 }}px;
                    }
                {%- endstyle -%}
                <p class="paragraph-{{ block.id }}-margin">
                    {{ block.settings.paragraph_text }}
                </p>
            {%- when 'button' -%}
                {%- style -%}
                    .button-{{ block.id }}-margin {
                        margin-top: {{ block.settings.margin_top | times: 0.75 | round: 0 }}px;
                        margin-bottom: {{ block.settings.margin_bottom | times: 0.75 | round: 0 }}px;
                    }
                {%- endstyle -%}
                <a href="{{ block.settings.button_link }}"
                    class="button btn-primary button-{{ block.id }}-margin"
                    title="Button">
                    {{ block.settings.button_text }}
                </a>
            {%- endcase -%}
        {%- endfor -%}
      </div>
      <div>
        {%- liquid 
            
            assign fetch_priority = 'auto'
            if section.index == 1
                assign fetch_priority = 'high'
            endif

            assign image_blocks = section.blocks | where: 'type', 'image'
            assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            assign image_class = ''

        -%}

        {% for block in image_blocks %}
            {% if block.settings.image != blank %}
                {% assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio %}
                {{ block.settings.image | image_url: width: 3840 | image_tag: width: block.settings.image.width, height: image_height, class: image_class, sizes: sizes, widths: widths, fetchpriority: fetch_priority }}
            {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        {% endfor %}

      </div>
    </div>
  </div>
</section>
